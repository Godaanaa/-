import java.util.Scanner;

public class AAA {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int a = 0;
		int b;
		do {
			System.out.print("양의 정수를 입력하세요 : ");
			b = in.nextInt();
			if (b > 0 && b % 2 == 0) {
				a += b;
			}
		} while (b > 0);
		System.out.println("짝수의 합: " + a);
	}
}
